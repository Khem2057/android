<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".product">
    <TextView
        android:id="@+id/service"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="39dp"
        android:padding="44dp"
        android:layout_marginTop="25dp"
        android:paddingStart="35dp"
        android:text="Our Services"
        android:textColorHint="@color/green"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/service"
        app:layout_constraintTop_toBottomOf="@+id/service"
        android:layout_marginTop="15dp"
        android:layout_marginStart="38dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plumber"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/service"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/sc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Charge:Rs 500"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/sp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>

        <TextView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="4dp"
            android:text="Other change are added accordig to product"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sc"/>

    <TextView
        android:id="@+id/spd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Date and Time:"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/imageView11"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"/>

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:rowCount="1"
        android:columnCount="6"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spd">
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="18    SUN"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/edit"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="19    MON"
            android:textAlignment="center"
            android:backgroundTint="@color/Grey"
            android:background="@drawable/edit"
            android:layout_margin="6dp"/>
        <EditText
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="20   TUE"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/edit"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="21   WED"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/edit"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="22    THU"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/edit"
            android:layout_margin="6dp"/>
    </GridLayout>

    <View
        android:id="@+id/view"
        android:layout_width="338dp"
        android:layout_height="2dp"
        android:background="@color/Grey"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintTop_toBottomOf="@+id/grid"/>

    <GridLayout
        android:id="@+id/grid1"
        android:layout_width="339dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:rowCount="2"
        android:columnCount="3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">
        <Button
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:text="9AM-11AM"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/tab_bkg"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:text="11AM-1PM"
            android:textAlignment="center"
            android:backgroundTint="@color/Grey"
            android:background="@drawable/tab_bkg"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:text="1PM-3PM"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/tab_bkg"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:text="3PM-5PM"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/tab_bkg"
            android:layout_margin="6dp"/>
        <Button
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:text="5PM-7PM"
            android:backgroundTint="@color/Grey"
            android:textAlignment="center"
            android:background="@drawable/tab_bkg"
            android:layout_margin="6dp"/>
    </GridLayout>

    <TextView
        android:id="@+id/sl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/grid1"/>

    <EditText
        android:id="@+id/sl1"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/tab_bkg"
        android:backgroundTint="@color/Grey"
        android:padding="17dp"
        android:drawableLeft="@drawable/home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sl" />

    <TextView
        android:id="@+id/si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Images:"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toBottomOf="@+id/sl1"/>

    <EditText
        android:id="@+id/si1"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:background="@drawable/tab_bkg"
        android:backgroundTint="@color/Grey"
        android:padding="17dp"
        android:drawableLeft="@drawable/image1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/si"/>

        <TextView
            android:id="@+id/sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detailed Note:"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/si1"/>

        <EditText
            android:id="@+id/sd1"
            android:layout_width="330dp"
            android:layout_height="80dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/tab_bkg"
            android:backgroundTint="@color/Grey"
            android:padding="15dp"
            android:text="Details about your needs"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sd" />

        <Button
            android:id="@+id/book"
            android:layout_width="118dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/tab_bkg"
            android:text="book"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sd1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>