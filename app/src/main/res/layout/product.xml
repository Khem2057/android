<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".product"
        android:layout_marginTop="25dp">
    <TextView
        android:id="@+id/bookingd"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/arrow"
        android:drawablePadding="39dp"
        android:padding="44dp"
        android:paddingStart="35dp"
        android:text="Add Products"
        android:textColorHint="@color/green"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/pp"
        android:layout_height="wrap_content"
        android:text="Product category"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/bookingd"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/cp"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:autofillHints="name"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        android:hint="choose product category"
        android:inputType="textPersonName"
        android:padding="17dp"
        android:drawableEnd="@drawable/down"
        android:textSize="14sp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/pc"
        android:layout_height="wrap_content"
        android:text="Product"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/cp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/pr"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:autofillHints="name"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        android:hint="choose product"
        android:inputType="textPersonName"
        android:padding="17dp"
        android:drawableEnd="@drawable/down"
        android:textSize="14sp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pc" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/pq"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/pr"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/pcq"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:autofillHints="name"
        android:background="@drawable/edit"
        android:backgroundTint="@color/Grey"
        android:hint="choose product category"
        android:inputType="textPersonName"
        android:padding="17dp"
        android:drawableEnd="@drawable/down"
        android:textSize="14sp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pq" />

    <Button
        android:id="@+id/pAdd"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/tab_bkg"
        android:text="Add"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcq"/>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="375dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/pAdd"
        android:layout_marginTop="12dp">

        <TableRow
            android:background="@color/Grey">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SN"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Products"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="4"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
        </TableRow>
        <!--data-->

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pipe"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="4"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pipe"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="4"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Pipe"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="4"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="200"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="8"
                android:padding="10sp"
                android:textAlignment="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="600"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_weight="2"
                android:padding="10sp"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
        <Button
            android:id="@+id/confirm"
            android:layout_width="235dp"
            android:layout_height="45dp"
            android:background="@drawable/tab_bkg"
            android:text="Request for confirmation"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/table"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"
            android:layout_marginTop="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
